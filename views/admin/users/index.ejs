<%- include ('../../partials/header.ejs') %>


<body>   
    <%- include ('../../partials/navbar.ejs') %>

    <div class="container" id="containerTop">
        <h3>Usuários</h3>
        <a class="btn btn-success" href="/admin/users/create">Criar novo usuário</a>
        <br><br>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <th scope="row"><%= user.id %></th>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning">Editar</a>

                        <form method="POST" action="/users/delete" style="display: inline" onsubmit="confirmDeletion(event, this)">
                            <input type="hidden" id="id" name="id" value="<%= user.id %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>

                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>